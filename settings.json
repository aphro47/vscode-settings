{
  "editor.copyWithSyntaxHighlighting": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "window.newWindowDimensions": "inherit",
  "editor.multiCursorModifier": "ctrlCmd",
  "files.trimTrailingWhitespace": true,
  "diffEditor.renderSideBySide": false,
  "editor.snippetSuggestions": "top",
  "editor.detectIndentation": false,
  "window.nativeFullScreen": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "workbench.editor.showTabs": "multiple",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.guides.indentation": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,

  // Typography
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 11.3,
  "editor.fontWeight": "bold",
  "editor.fontLigatures": false,
  "search.useIgnoreFiles": false,
  "search.exclude": {
    // Hide everything in /vendor, except the "laravel" and "livewire" folder.
    "**/vendor/{[^l],?[^ai]}*": true,
    // Hide everything in /public, except "index.php"
    "**/public/{[^i],?[^n]}*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/_ide_helper.php": true,
    "**/composer.lock": true,
    "**/package-lock.json": true,
    "storage": true,
    ".phpunit.result.cache": true
  },

  // Prettier
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "explorer.sortOrder": "type",
  "prettier.tabWidth": 2,
  "workbench.tree.indent": 16,
  "editor.wordWrapColumn": 120,
  "editor.quickSuggestions": {
    "strings": true
  },
  "security.workspace.trust.untrustedFiles": "open",
  "editor.linkedEditing": true,
  "diffEditor.wordWrap": "on",
  "notebook.output.wordWrap": true,
  "editor.minimap.maxColumn": 250,
  "explorer.confirmDelete": false,
  "editor.accessibilitySupport": "off",
  "chat.editor.wordWrap": "on",
  "editor.wordWrap": "wordWrapColumn",
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.experimental.configFile": null,

  // Cursor AI
  "security.promptForLocalFileProtocolHandling": false,
  "cloudcode.duetAI.project": "vscode-421715",
  "files.associations": {
    ".cursorrules": "plaintext"
  },

  "workbench.colorTheme": "Bearded Theme Light",
  "editor.tabSize": 2,
  "workbench.iconTheme": "bearded-icons",
  "workbench.tree.enableStickyScroll": false,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.cursorBlinking": "solid",
  "editor.stickyScroll.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "window.commandCenter": false,
  "workbench.settings.applyToAllProfiles": [
    "workbench.colorCustomizations"
  ],
  "window.titleBarStyle": "custom",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "breadcrumbs.enabled": false,

  "apc.imports": [
    "custom-vscode.css"
  ],

  "workbench.colorCustomizations": {
    "[Bearded Theme Light]": {
      "sideBar.border": "#F8F8F8",
      "statusBar.border": "#F8F8F8",
      "terminal.border": "#F8F8F8",
      "panel.border": "#F8F8F8",
      "activityBar.border": "#F8F8F8",
      "activityBar.activeBorder": "#F8F8F8",
      "sideBar.background": "#F8F8F8",
      "sideBarSectionHeader.background": "#F8F8F8",
      "panel.background": "#F8F8F8",
      "editor.background": "#F8F8F8"
    }
  }
}
